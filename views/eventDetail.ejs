    <title>Terms and Conditions</title>
    
    <link rel="stylesheet" href="/css/eventDetail.css">
    <link rel="stylesheet" href="/css/loader.css">
    <link rel="stylesheet" href="/css/menu.css">
</head>
<body>
    <%- include("./partials/loader.ejs") %>
    <%- include("./partials/menu.ejs") %>

    
    <div class="privacy-policy">
        <div class="secondContainer">
        <h1 class="privacy-policy-title">Rules and Regulations</h1>
        <% for(var i=0;i<event_list.length;i++){%>
            <% if(event_id === event_list[i].id){%>
                <div class="privacy-topics">
           
                    <h2 class="privacy-subtopics">OVERVIEW</h2>
                    <p class="privacy-desc">
                        <% for(var j=0;j<event_list[i].content.overview.length;j++) {%>
                            <% if(event_list[i].content.overview[j].indexOf(":") !== -1){ %> 
                                <%=event_list[i].content.overview[j].substring(0,event_list[i].content.overview[j].indexOf(":")) %><a href=<%= event_list[i].content.overview[j].substring(event_list[i].content.overview[j].indexOf(":")+1) %>>here</a><br><br>
                            <% }else{%>
                                <%=event_list[i].content.overview[j]%>
                            <%} %>
                        <% } %>  
                        <% for(var j=0;j<event_list[i].content.outcome.length;j++) {%>
                            <%=event_list[i].content.outcome[j] %><br><br>
                        <% } %>  
        
                    </p>
                </div>
                <div class="privacy-topics">
                   
                    <h2 class="privacy-subtopics"><%=event_list[i].content.stages[0].stage_name%></h2>
                    <p class="privacy-desc">
                        
                        <% for(var k=0;k<event_list[i].content.stages[0].stage_rules.length;k++){ %>
                            <% if(event_list[i].content.stages[0].stage_rules[k].indexOf(":") !== -1){ %> 
                                <%=event_list[i].content.stages[0].stage_rules[k].substring(0,event_list[i].content.stages[0].stage_rules[k].indexOf(":")) %><a href=<%=event_list[i].content.stages[0].stage_rules[k].substring(event_list[i].content.stages[0].stage_rules[k].indexOf(":")+1) %>>here</a><br><br>
                            <% }else{%>
                                <%=event_list[i].content.stages[0].stage_rules[k]%>
                            <%} %>
                            <br><br>
                        <% } %> 
        
                    </p>
                </div>
                <div class="privacy-topics">
                   
                    <h2 class="privacy-subtopics"><%=event_list[i].content.stages[1].stage_name%></h2>
                    <p class="privacy-desc">
                        <% for(var k=0;k<event_list[i].content.stages[1].stage_rules.length;k++){ %>
                            <% if(event_list[i].content.stages[1].stage_rules[k].indexOf(":") !== -1){ %> 
                                <%=event_list[i].content.stages[1].stage_rules[k].substring(0,event_list[i].content.stages[1].stage_rules[k].indexOf(":")) %><a href=<%=event_list[i].content.stages[1].stage_rules[k].substring(event_list[i].content.stages[1].stage_rules[k].indexOf(":")+1) %>>here</a><br><br>
                            <% }else{%>
                                <%=event_list[i].content.stages[1].stage_rules[k]%>
                            <%} %>
                            <br><br>
                        <% } %>
                        <!-- The shortlisted teams will have to pitch their idea in front of an expert investor (or panel).<br>
                        Time Limit: 8 mins (6 mins pitch + 2 mins QnA) -->
        
                    </p>
                </div>
                <div class="privacy-topics">
                 
                    <h2 class="privacy-subtopics">GUIDELINES</h2>
                    <p class="privacy-desc">
                        <% for(var k=0;k<event_list[i].content.guidelines.length;k++){ %>
                            <% if(event_list[i].content.guidelines[k].indexOf(":") !== -1){ %> 
                                <%=event_list[i].content.guidelines[k].substring(0,event_list[i].content.guidelines[k].indexOf(":")) %><a href=<%=event_list[i].content.guidelines[k].substring(event_list[i].content.guidelines[k].indexOf(":")+1) %>>here</a><br><br>
                            <% }else{%>
                                <%=event_list[i].content.guidelines[k]%><br><br>
                            <%} %>
                            
                        <% } %>  
                        <!-- You can participate individually or in a team of a maximum of 4 members. -->
                    </p>
                </div> <br><br>
                <a href="/register/${event_id}" class="registerFormLink"
                ><span class="registerFormLinkText">
                    Register Now <i class="fa-solid fa-arrow-right"></i>
                </span>
                </a>
            <%}%>
        <%}%>
        
    </div>

</body>

<script src="/js/loader.js"></script>
<script src="/js/menu.js"></script>
</html>